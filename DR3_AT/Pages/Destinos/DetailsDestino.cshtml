@page "{id:int}"
@model DR3_AT.Pages.Destinos.DetailsDestino

@{
    ViewData["Title"] = "Detalhes do Destino";
}

<h1>@ViewData["Title"]</h1>

@if (Model.Destino != null)
{
    <div>
        <h4>Destino: @Model.Destino.Nome</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">ID</dt>
            <dd class="col-sm-10">@Model.Destino.Id</dd>

            <dt class="col-sm-2">Nome</dt>
            <dd class="col-sm-10">@Model.Destino.Nome</dd>

            <dt class="col-sm-2">País</dt>
            <dd class="col-sm-10">@Model.Destino.Pais</dd>
        </dl>
    </div>
} else
{
    <div class="alert alert-danger">Destino não encontrado.</div>
}


<div>
    <a asp-page="/Index">Voltar para a Lista</a>
</div>